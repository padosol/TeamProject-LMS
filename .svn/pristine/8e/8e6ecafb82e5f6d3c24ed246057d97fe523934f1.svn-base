/* 폰트 지정 */
@font-face {
    font-family: 'NanumGothic';
    src: url('/resources/fonts/NanumGothic.woff') format('truetype');
}

@font-face {
    font-family: 'NanumGothicBold';
    src: url('/resources/fonts/NanumGothicBold.woff') format('truetype');
}

body, h1, h2, h3, h4, h5, h6, p, span{
	font-family: 'NanumGothic' !important; 
}


/* 기본 색상 지정 */
.custom-s{
	color: var(--custom-s);
}

.custom-p{
	color: var(--custom-p);
}

.custom-m{
	color: var(--custom-m);
}

/* 기본 버튼 지정 */
.custom-btn-s{
	background-color: var(--custom-s) !important;
	color: #FFFFFF !important;	
}

.custom-btn-p{
	background-color: var(--custom-p) !important;
	color: #FFFFFF !important;	
}

.custom-btn-m{
	background-color: var(--custom-m) !important;
	color: #FFFFFF !important;	
}

/* 테이블 관련 */
.custom-theader-s{
	/* background-color: #E9ECEF !important;*/
	background-color: #E9ECEF !important;
}

.custom-theader-p{
	background-color: #EBEBEB !important;
}

.custom-theader-m{
	background-color: rgba(245, 245, 245, 0.493) !important;
}

.custom-table1 table, .custom-table1 thead {
   display:block;
   width:100%;
}

.custom-table1 table thead tr {
   display:table;
    table-layout:fixed;
    width:100%;
}

.custom-table1 table thead tr {
   display:table;
    table-layout:fixed;
    width:100%;
}

.custom-table1 table thead tr {
   text-align: center;
}

.custom-table1 tbody { 
   display: block;
   overflow: auto;
   overflow-x: hidden;
}

.custom-table1 tbody tr {
   display: table;
    table-layout: fixed;
    width:100%;
}

.custom-table1 tr td {
   text-align: center;
}

/* 우측 정렬 */
.custom-right-array{
	display: flex;
	justify-content: flex-end;
}

/* border */
.custom-border-s{
	border : 1px solid var(--custom-s) !important;
	color : var(--custom-s) !important;
}
.custom-border-p{
	border : 1px solid var(--custom-p) !important;
	color : var(--custom-p) !important;
}

.custom-border-m{
	border : 1px solid var(--custom-m) !important;
	color : var(--custom-m) !important;
}

/* font-weight : bold */
.custom-bold{
	font-weight: bold !important;
}

/* padding-right 100px; */
.custom-pr100{
	padding-right: 100px !important;
}

/* 로더 */
.loader-container{
	  display: flex;
	  justify-content: center;
	  align-items: center;
	  min-height: 100vh;}


