<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xmlns:websocket="http://www.springframework.org/schema/websocket"
   xsi:schemaLocation="http://www.springframework.org/schema/websocket http://www.springframework.org/schema/websocket/spring-websocket-4.3.xsd
      http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

   
   	<!-- webSocket 용  -->
	<bean id="chattingHandler" class="org.hdcd.controller.common.handler.ChatHandler"/>
  	 <!-- 웹소켓 엔드 포인트 설정~ -->
  	<websocket:handlers allowed-origins="*">
		<websocket:mapping handler="chattingHandler" path="/websocket/echo.do"/>
	</websocket:handlers>
	
	<bean id="mainchattingHandler" class="org.hdcd.controller.common.handler.MainChatHandler"/>
  	 <!-- 웹소켓 엔드 포인트 설정~ -->
  	<websocket:handlers allowed-origins="*">
		<websocket:mapping handler="mainchattingHandler" path="/websocket/main"/>
	</websocket:handlers>
	
	
	
   

</beans>