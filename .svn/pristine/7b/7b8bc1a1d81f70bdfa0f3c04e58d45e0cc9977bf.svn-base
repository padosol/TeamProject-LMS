/* 아이디 저장, 아이디 찾기, 비밀번호 찾기  양쪽 배치 css*/
#IdPwOption {
	display: flex;
	justify-content: space-between;
	flex-basis: 100%;
}

/* 신/편입생 학번 조회  오른쪽 배치 css*/
#findNo {
	display: flex;
	flex-direction: row-reverse;
}

/* 배경이미지 불투명 css */
.backstretch::before { 
    position: absolute; 
    content: ""; 
    top:0px; 
    left:0px; 
    width: 100%; 
    height: 100%; 
    background-color: rgba(0,0,0,0.3); 
 } 

/* 로그인창 불투명하게 css*/
#login-card {
	background-color: #212121;
	color: #ffffff;
/* 	opacity: 0.8; */
	background : rgba(0,0,0,.4);
}

/* 공지사항창 불투명하게 css*/
#login-board-card {
	background-color: #212121;
	color: #ffffff;
/* 	opacity: 0.8; */
	background : rgba(0,0,0,.4);
}

/* LOGIN, NEWS 흰색 글씨*/
.login-board-title, .login-title {
	text-align: center;
	color: #ffffff;
}

.login-board-contents {
	display: flex;
	justify-content: space-between;
}

#simpleUsage{
	color : #ffffff;
	font-size : 80px;
	text-align: center;
}

.autoLoginBtnDiv{
	display: flex;
 	flex-direction: row-reverse; 
}

.autoLoginBtn{
	background-color:transparent;
	color : #ffffff;
}

.autoLoginBtn:hover{
	background-color: #2986CC;
}
